{
  "manifest_version": 2,
  "name": "RestMate tool",
  "description": "This tool provides you an interface dealing with Rest operations.",
  "version": "1.0",
  "permissions": [
    "http://localhost/api/",
    "storage",
    "notifications",
    "contextMenus",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "request.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}